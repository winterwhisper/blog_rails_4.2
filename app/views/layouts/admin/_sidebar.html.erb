<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag current_admin.avatar_url(:thumb), class: 'img-circle', alt: "User Image" %>
      </div>
      <div class="pull-left info">
        <p><%= current_admin.name %></p>
      </div>
    </div>

    <%= form_for(:search, url: admin_searchs_path, method: :get, html: { class: 'sidebar-form' }) do |f| %>
      <div class="input-group">
        <%= f.text_field :q, class: 'form-control', placeholder: '搜索...' %>
        <span class="input-group-btn">
          <%= f.button class: 'btn btn-flat' do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>

    <ul class="sidebar-menu">
      <li class="header">导航</li>
      <li class="<%= render_sidenav_highlight('dashboard', 'home') %>">
        <%= link_to admin_root_path do %>
          <i class='fa fa-dashboard'></i>
          <span>仪表盘</span>
        <% end %>
      </li>
      <li class="treeview <%= render_sidenav_highlight('posts', nil, params[:tag].blank?) %>">
        <%= link_to 'javascript:;' do %>
          <i class='fa fa-files-o'></i>
          <span>文章</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li class="<%= render_sidenav_highlight('posts', 'index', params[:tag].blank?) %>">
            <%= link_to admin_posts_path do %>
              <i class='fa fa-circle-o'></i>
              <span>所有文章</span>
            <% end %>
          </li>
          <li class="<%= render_sidenav_highlight('posts', 'new', params[:tag].blank?) %>">
            <%= link_to new_admin_post_path do %>
              <i class='fa fa-circle-o'></i>
              <span>新建文章</span>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview <%= render_sidenav_highlight('tags') %>">
        <%= link_to 'javascript:;' do %>
          <i class='fa fa-tags'></i>
          <span>标签</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li class="<%= render_sidenav_highlight('tags', 'index') %>">
            <%= link_to admin_tags_path do %>
              <i class='fa fa-circle-o'></i>
              <span>所有标签</span>
            <% end %>
          </li>
          <li class="<%= render_sidenav_highlight('tags', 'new') %>">
            <%= link_to new_admin_tag_path do %>
              <i class='fa fa-circle-o'></i>
              <span>新建标签</span>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="<%= render_sidenav_highlight('comments') %>">
        <%= link_to admin_comments_path do %>
          <i class='fa fa-comments-o'></i> <span>评论</span>
        <% end %>
      </li>
      <li class="<%= render_sidenav_highlight('users') %>">
        <%= link_to 'javascript:;' do %>
          <i class='fa fa-users'></i> <span>用户</span>
        <% end %>
      </li>
      <li class="header">标签</li>
      <% if @tags.present? %>
        <% @tags.each do |tag| %>
          <li class="<%= controller_name == 'posts' and params[:tag].present? and params[:tag] == tag.value ? 'active' : '' %>">
            <%= link_to admin_posts_path(tag: tag.value) do %>
              <i class='fa fa-circle-o'></i> <span><%= tag.value %></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
</aside>