<header class="main-header">
  <%= link_to admin_root_path, class: 'logo' do %>
    <span class="logo-mini">后台</span>
    <span class="logo-lg">后台管理系统</span>
  <% end %>

  <nav class="navbar navbar-static-top" role="navigation">
    <a href="javascript:;" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only"></span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_admin.avatar_url(:thumb), class: 'user-image', alt: "User Image" %>
            <span class="hidden-xs"><%= current_admin.name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag current_admin.avatar_url(:thumb), class: 'img-circle', alt: "User Image" %>
              <p>
                <%= current_admin.nickname %>
                <small><%= current_admin.email %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to '用户资料', admin_profile_path, class: 'btn btn-default btn-flat' %>
                <%= link_to '修改密码', new_admin_change_passwords_path, class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to '退出', admin_logout_path, method: :delete, class: 'btn btn-default btn-flat' %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>