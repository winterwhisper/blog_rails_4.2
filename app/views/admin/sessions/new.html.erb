<%= form_for(@session, as: :session) do |f| %>
  <div class="form-group has-feedback">
    <%= f.text_field :name, class: 'form-control', placeholder: '请输入用户名' %>
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password, class: 'form-control', placeholder: '请输入密码' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>

  <div class="row">
    <div class="col-xs-8">
      <div class="checkbox icheck">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          下次自动登录
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <%= f.submit '登录', class: 'btn btn-primary btn-block btn-flat' %>
    </div>
  </div>
<% end %>