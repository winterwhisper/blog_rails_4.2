<%= form_for(@change_password, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group <%= render_form_error_class(@change_password, :old_password) %>">
    <%= f.label :old_password, '请输入旧密码', class: 'col-xs-12 col-sm-2 control-label' %>
    <div class="col-xs-12 col-sm-10 col-md-9">
      <%= f.text_field :old_password, class: 'form-control', placeholder: '请输入旧密码' %>
      <%= render_form_error_message(@change_password, :old_password) %>
    </div>
  </div>
  <div class="form-group <%= render_form_error_class(@change_password, :password) %>">
    <%= f.label :password, '请输入新密码', class: 'col-xs-12 col-sm-2 control-label' %>
    <div class="col-xs-12 col-sm-10 col-md-9">
      <%= f.text_field :password, class: 'form-control', placeholder: '请输入新密码' %>
      <%= render_form_error_message(@change_password, :password) %>
    </div>
  </div>
  <div class="form-group <%= render_form_error_class(@change_password, :password_confirmation) %>">
    <%= f.label :password_confirmation, '请再次输入新密码', class: 'col-xs-12 col-sm-2 control-label' %>
    <div class="col-xs-12 col-sm-10 col-md-9">
      <%= f.text_field :password_confirmation, class: 'form-control', placeholder: '请再次输入新密码' %>
      <%= render_form_error_message(@change_password, :password_confirmation) %>
    </div>
  </div>
  <%= f.submit '提交', class: 'btn btn-success col-sm-offset-2 col-xs-12 col-sm-1' %>
<% end %>